{
    "allure": {
      "directory": "allure-results",
      "links": [
        "{link}",
        "https://testrail.com/browse/{tms}",
        "https://jira.com/browse/{issue}"
      ]
    },
    "specflow": {
      "stepArguments": {
        "convertToParameters": "true",
        "paramNameRegex": "",
        "paramValueRegex": ""
      },
      "grouping": {
        "suites": {
          "parentSuite": "^parentSuite:?(.+)",
          "suite": "^suite:?(.+)",
          "subSuite": "^subSuite:?(.+)"
        },
        "behaviors": {
          "epic": "^epic:?(.+)",
          "story": "^story:(.+)"
        }
      },
      "labels": {
        "owner": "^author:?(.+)",
        "severity": "^(normal|blocker|critical|minor|trivial)"
      },
      "links": {
        "tms": "^story:(.+)",
        "issue": "^issue:(.+)",
        "link": "^link:(.+)"
      }
    }
  }
